---
<div class="bg-[#f5ead6] w-full font-titles font-extrabold">
    <header class="pt-8 p-4 mx-auto max-w-screen-xl flex flex-col lg:flex-row items-center justify-between ">
        <a href="/" class="flex items-center space-x-3 rtl:space-x-reverse">
            <svg class="w-16 max-w-20 mr-4" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" stroke="#fb5335"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"><path d="M5.926 20.574a7.26 7.26 0 0 0 3.039 1.511c.107.035.179-.105.107-.175-2.395-2.285-1.079-4.758-.107-5.873.693-.796 1.68-2.107 1.608-3.865 0-.176.18-.317.322-.211 1.359.703 2.288 2.25 2.538 3.515.394-.386.537-.984.537-1.511 0-.176.214-.317.393-.176 1.287 1.16 3.503 5.097-.072 8.19-.071.071 0 .212.072.177a8.761 8.761 0 0 0 3.003-1.442c5.827-4.5 2.037-12.48-.43-15.116-.321-.317-.893-.106-.893.351-.036.95-.322 2.004-1.072 2.707-.572-2.39-2.478-5.105-5.195-6.441-.357-.176-.786.105-.75.492.07 3.27-2.063 5.352-3.922 8.059-1.645 2.425-2.717 6.89.822 9.808z" fill="#fbae00"></path></g></svg>
            <span class="mb-4 text-3xl tracking-tight text-[#ea580c] self-end whitespace-nowrap">
                !Scarlet
            </span>
        </a>
        <div class="md:hidden">
            <button class="text-[#ea580c] focus:outline-none" id="hamburger">
                <svg
                    class="h-6 w-6"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                    xmlns="http://www.w3.org/2000/svg"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M4 6h16M4 12h16m-7 6h7"
                    ></path>
                </svg>
            </button>
        </div>
        <div class="hidden toggle md:flex md:items-center md:w-auto w-full text-center flex-col md:flex-row" id="menu">
            <nav>
                <ul class="md:flex items-center justify-between text-xl text-white md:text-gray-800 pt-4 md:pt-0">
                    <li class="bg-transparent md:hover:transition ease-in-out delay-75 md:hover:bg-[url('/primary.png')] md:hover:bg-contain md:hover:bg-no-repeat md:hover:bg-center md:hover:-translate-y-1 md:hover:scale-110 duration-300"><a class="md:p-4 py-3 px-0 block hover:text-orange-400 md:hover:text-white" href="#">News</a></li>
                    <li class="bg-transparent md:hover:transition ease-in-out delay-75 md:hover:bg-[url('/primary.png')] md:hover:bg-contain md:hover:bg-no-repeat md:hover:bg-center md:hover:-translate-y-1 md:hover:scale-110 duration-300"><a class="md:p-4 py-3 px-0 block hover:text-orange-400 md:hover:text-white" href="#">Contactos</a></li>
                    <div id="dropDiv" class="relative font-titles w-max mx-auto bg-transparent">
                        <button type="button" id="dropdownToggle" class="px-3 py-3 bg-transparent md:hover:bg-[url('/primary.png')] md:hover:bg-center md:hover:bg-no-repeat md:hover:bg-contain md:hover:transition ease-in-out delay-75 md:hover:-translate-y-1 md:hover:scale-110 duration-300">
                            <a id="aboutText" class="md:pl-4 py-3 px-0 hover:text-[#ea580c] md:hover:text-white">About Us</a>
                            <svg xmlns="http://www.w3.org/2000/svg" class="w-3 fill-[#333] hover:fill-[#ffae27] inline" viewBox="0 0 24 24" id="dropIcon">
                                <path fill-rule="evenodd"
                                d="M11.99997 18.1669a2.38 2.38 0 0 1-1.68266-.69733l-9.52-9.52a2.38 2.38 0 1 1 3.36532-3.36532l7.83734 7.83734 7.83734-7.83734a2.38 2.38 0 1 1 3.36532 3.36532l-9.52 9.52a2.38 2.38 0 0 1-1.68266.69734z"
                                clip-rule="evenodd" data-original="#000000" />
                            </svg>
                        </button>                 
                        <ul id="dropdownMenu" class='absolute shadow-lg bg-gray-50 mt-2 py-2 z-[1000] min-w-full w-max rounded max-h-96 overflow-auto hidden'>
                            <li class="text-sm bg-transparent md:hover:transition ease-in-out delay-45 md:hover:bg-[url('/secondary.png')] md:hover:bg-contain md:hover:bg-no-repeat md:hover:bg-center duration-300"><a class="md:p-4 py-3 px-0 block hover:text-orange-400 md:hover:text-white md:mb-0 mb-2" href="#">About the Project</a></li>
                            <li class="text-sm bg-transparent md:hover:transition ease-in-out delay-45 md:hover:bg-[url('/secondary.png')] md:hover:bg-contain md:hover:bg-no-repeat md:hover:bg-center duration-300"><a class="md:p-4 py-3 px-0 block hover:text-orange-400 md:hover:text-white md:mb-0 mb-2" href="#">About the App</a></li>
                        </ul>
                    </div>
                    <li class="bg-transparent md:hover:transition ease-in-out delay-75 md:hover:bg-[url('/primary.png')] md:hover:bg-contain md:hover:bg-no-repeat md:hover:bg-center md:hover:-translate-y-1 md:hover:scale-110 duration-300"><a class="md:p-4 py-3 px-0 block hover:text-orange-400 md:hover:text-white" href="/auth/Login">Iniciar Sesion</a></li>
                </ul>
            </nav>
        </div>
    </header>
</div>

<script>
    const button = document.getElementById('dropdownToggle');
    const dropDiv = document.getElementById('dropDiv');
    const dropdown = document.getElementById('dropdownMenu');
    const aboutText = document.getElementById('aboutText');
    const dropIcon = document.getElementById('dropIcon');

    document.getElementById("hamburger").onclick = function toggleMenu() {
        const navToggle = document.getElementsByClassName("toggle");
        for (let i = 0; i < navToggle.length; i++) {
            navToggle.item(i).classList.toggle("hidden");
        }
    };

    button.addEventListener('click', (event) => {
        const target = event.target as HTMLElement;
        if (target) {
        dropdown.classList.toggle('hidden');
        }
    });

    document.addEventListener('click', (event) => {
        const target = event.target as HTMLElement;
        if (!button.contains(target) && !dropdown.contains(target)) {
        dropDiv.classList.remove("md:bg-[url('/primary.png')]", "md:bg-center", "md:bg-no-repeat", "md:bg-contain")
        aboutText.classList.remove('text-[#ea580c]', 'md:text-white');
        dropIcon.classList.remove('fill-[#ffae27]');
        dropdown.classList.add('hidden');
        }
    });

    dropDiv.addEventListener('mouseenter', () => {
        dropDiv.classList.remove("md:hover:bg-[url('/primary.png')]", "md:hover:bg-center", "md:hover:bg-no-repeat", "md:hover:bg-contain")
        aboutText.classList.add('text-[#ea580c]', 'md:text-white');
        dropIcon.classList.add('fill-[#ffae27]');
    });

    dropDiv.addEventListener('mouseleave', () => {
        dropDiv.classList.add("md:bg-[url('/primary.png')]", "bg-center", "bg-no-repeat", "bg-contain")
    });
</script>