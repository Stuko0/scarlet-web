---
import Layout from "../../../layouts/Layout.astro";
import Header from "../../../components/globals/es/Header.astro";
import Footer from "../../../components/globals/es/Footer.astro";
import { checkLogin } from "../../../services/users_services";

const handleLogin = async (event) => {
	event.preventDefault();
	const form = event.target as HTMLFormElement;
	const email = form.email.value;
	const password = form.password.value;
	try {
		const response = await checkLogin(email, password);
		console.log("Login success:", response);
		alert("Logeado");
		window.location.href = "/";
	} catch (error) {
		console.error("Login failed:", error);
		alert("Login failed");
	}
};
---

<Layout title="Iniciar Sesión">
	<Header />
	<div
		class="flex justify-center items-center h-full min-h-[88.8vh] p-4 bg-[url('https://temascbba.com/wp-content/uploads/2024/05/parque-nacional-tunari.jpg')] bg-no-repeat bg-cover"
	>
		<div class="max-w-lg w-full mx-auto">
			<form
				id="login-form"
				onsubmit="handleLogin(event)"
				class="bg-opacity-85 bg-white rounded-2xl p-6 shadow-[0_2px_16px_-3px_rgba(6,81,237,0.3)]"
			>
				<div class="mb-12">
					<h3
						class="text-gray-800 text-3xl font-extrabold font-titles"
					>
						Iniciar Sesión
					</h3>
				</div>

				<div>
					<div class="relative flex items-center">
						<input
							name="email"
							id="email"
							type="text"
							required
							class="bg-transparent w-full text-sm text-gray-800 border-b border-gray-400 focus:border-gray-800 px-2 py-3 outline-none placeholder:text-gray-800"
							placeholder="Ingrese su email"
						/>
						<svg
							xmlns="http://www.w3.org/2000/svg"
							fill="#333"
							stroke="#333"
							class="w-[18px] h-[18px] absolute right-2"
							viewBox="0 0 682.667 682.667"
						>
							<defs>
								<clipPath id="a" clipPathUnits="userSpaceOnUse">
									<path
										d="M0 512h512V0H0Z"
										data-original="#000000"></path>
								</clipPath>
							</defs>
							<g
								clip-path="url(#a)"
								transform="matrix(1.33 0 0 -1.33 0 682.667)"
							>
								<path
									fill="none"
									stroke-miterlimit="10"
									stroke-width="40"
									d="M452 444H60c-22.091 0-40-17.909-40-40v-39.446l212.127-157.782c14.17-10.54 33.576-10.54 47.746 0L492 364.554V404c0 22.091-17.909 40-40 40Z"
									data-original="#000000"></path>
								<path
									d="M472 274.9V107.999c0-11.027-8.972-20-20-20H60c-11.028 0-20 8.973-20 20V274.9L0 304.652V107.999c0-33.084 26.916-60 60-60h392c33.084 0 60 26.916 60 60v196.653Z"
									data-original="#000000"></path>
							</g>
						</svg>
					</div>
				</div>

				<div class="mt-6">
					<div class="relative flex items-center">
						<input
							name="password"
							id="password"
							type="password"
							required
							class="bg-transparent w-full text-sm text-gray-800 border-b border-gray-400 focus:border-gray-800 px-2 py-3 outline-none placeholder:text-gray-800"
							placeholder="Ingrese su contraseña"
						/>
						<svg
							xmlns="http://www.w3.org/2000/svg"
							fill="#333"
							stroke="#333"
							class="w-[18px] h-[18px] absolute right-2 cursor-pointer"
							viewBox="0 0 128 128"
						>
							<path
								d="M64 104C22.127 104 1.367 67.496.504 65.943a4 4 0 0 1 0-3.887C1.367 60.504 22.127 24 64 24s62.633 36.504 63.496 38.057a4 4 0 0 1 0 3.887C126.633 67.496 105.873 104 64 104zM8.707 63.994C13.465 71.205 32.146 96 64 96c31.955 0 50.553-24.775 55.293-31.994C114.535 56.795 95.854 32 64 32 32.045 32 13.447 56.775 8.707 63.994zM64 88c-13.234 0-24-10.766-24-24s10.766-24 24-24 24 10.766 24 24-10.766 24-24 24zm0-40c-8.822 0-16 7.178-16 16s7.178 16 16 16 16-7.178 16-16-7.178-16-16-16z"
								data-original="#000000"></path>
						</svg>
					</div>
				</div>

				<div
					class="flex flex-wrap items-center justify-between gap-4 mt-6"
				>
					<div class="flex items-center">
						<input
							id="remember-me"
							name="remember-me"
							type="checkbox"
							class="h-4 w-4 shrink-0 border-gray-300 rounded"
						/>
						<label
							for="remember-me"
							class="ml-3 block text-sm text-gray-800 font-body"
						>
							Recuerdame
						</label>
					</div>
					<div>
						<a
							href="jajvascript:void(0);"
							class="text-[#ea580c] text-sm font-semibold hover:underline font-body"
						>
							¿Olvidó su contraseña?
						</a>
					</div>
				</div>

				<div class="mt-12">
					<button
						type="submit"
						class="w-full py-2.5 px-4 text-sm font-semibold tracking-wider rounded-full text-white bg-[#ea580c] hover:bg-[#ef580c] focus:outline-none font-titles"
					>
						Iniciar Sesión
					</button>
					<p class="text-gray-800 text-sm text-center mt-6 font-body">
						¿No tiene una cuenta? <a
							href="/auth/es/Register"
							class="text-[#ea580c] font-semibold hover:underline ml-1 whitespace-nowrap font-titles"
							>Registrese aquí</a
						>
					</p>
				</div>
			</form>
			<script>
				document
					.getElementById("login-form")
					.addEventListener("submit", async (event) => {
						event.preventDefault();
						const form = event.target as HTMLFormElement;
						const email = form.email.value;
						const password = form.password.value;

						import("../../../services/users_services.js").then(
							({ checkLogin }) => {
								checkLogin(email, password)
									.then((response) => {
										window.location.href =
											"/dashboard/es/Dashboard";
									})
									.catch((error) => {
										alert("Fallo el Inicio de Sesión");
									});
							},
						);
					});
			</script>
		</div>
	</div>
	<Footer />
</Layout>
